FROM node:14.16.0-alpine3.13

ARG PGHOST
ARG PGDATABASE
ARG PGUSER
ARG PGPASSWORD
ARG PGPORT
ARG SECRET


ENV PGHOST $PGHOST
ENV PGDATABASE $PGDATABASE
ENV PGUSER $PGUSER
ENV PGPASSWORD $PGPASSWORD
ENV PGPORT $PGPORT
ENV SECRET $SECRET


RUN apk add --no-cache postgresql-client

WORKDIR /usr/src/dreamonmessenger
COPY ./ ./

RUN cd back
RUN npm install

EXPOSE 8080
CMD ['npm', 'start']
